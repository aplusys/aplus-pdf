{
    "name": "aplusy/pdf",
    "description": "Laravel 12 wrapper for PDF generation",
    "license": "MIT",
    "authors": [
        {
            "name": "Aplus Team",
            "email": "info@aplus-yemen.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "knplabs/knp-snappy": "^1.0",
        "spatie/browsershot": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Aplus\\Pdf\\": "src/"
        },
        "files": [
            "src/Helpers/PdfHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Aplus\\Pdf\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aplus\\Pdf\\PdfServiceProvider"
            ],
            "aliases": {
                "Pdf": "Aplus\\Pdf\\Facades\\Pdf",
                "Image": "Aplus\\Pdf\\Facades\\Image"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}